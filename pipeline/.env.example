# Environment variables for football betting pipeline
# Copy this file to .env and fill in your actual values

# API Keys
FOOTBALL_DATA_ORG_API_KEY=YOUR_FOOTBALL_DATA_ORG_API_KEY
THE_ODDS_API_KEY=YOUR_THE_ODDS_API_KEY

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=football_betting
DB_USER=postgres
DB_PASSWORD=YOUR_DB_PASSWORD

# Logging
LOG_LEVEL=INFO

# API Configuration (optional - defaults in config.py)
# API_HOST=0.0.0.0
# API_PORT=5555

# Cache Configuration
CACHE_ENABLED=true
CACHE_BYPASS=false
FOOTBALL_DATA_CACHE_TTL=3600
ODDS_CACHE_TTL=300
NCAA_CACHE_TTL=900
NBA_CUP_CACHE_TTL=600
